        }
    ],
    "require": {
        "php": ">= 7.1",
        "nette/utils": "^3.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.83",
        "symplify/easy-coding-standard": "^9.2",
        "nette/tester": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "JakubBoucek\\Escape\\": "src/"
